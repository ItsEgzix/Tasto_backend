{
  "name": "food-cost-app-backend",
  "version": "1.0.0",
  "description": "Backend API for Food Cost Management App",
  "main": "dist/server.js",
  "scripts": {
    "db:mark-applied": "tsx scripts/mark-migrations-applied.ts",
    "db:run-migration": "tsx scripts/run-migration.ts",
    "db:create-stock-table": "tsx scripts/create-ingredient-stock-table.ts",
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src --ext .ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx scripts/seed-mock-data.ts",
    "db:calculate-analytics": "tsx scripts/calculate-analytics.ts"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "express": "^5.1.0",
    "express-validator": "^7.3.0",
    "jsonwebtoken": "^9.0.2",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.14.12",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "drizzle-kit": "^0.31.6",
    "eslint": "^8.57.0",
    "tsx": "^4.20.6",
    "typescript": "^5.5.4"
  }
}
